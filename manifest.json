{
	"name": "Block Honey Tabs",
	"version": "1.0",
	"manifest_version": 3,
	"description": "Blocks Honey extension from opening new tabs.",
	"permissions": ["tabs"],
	"host_permissions": ["https://o.honey.io/*"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": {
			"16": "icons/default-16.png",
			"19": "icons/default-19.png",
			"32": "icons/default-32.png",
			"38": "icons/default-38.png"
		}
	},
	"icons": {
		"128": "icons/honey-logo-128.png",
		"16": "icons/honey-logo-16.png",
		"48": "icons/honey-logo-48.png"
	}
}
